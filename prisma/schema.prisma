generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id        BigInt      @id @unique
  nickname  String
  fio       String?
  phone     String?
  UserEvent UserEvent[]
  isPayer   Boolean     @default(false)
}

model Event {
  id         Int         @id @default(autoincrement())
  name       String
  dateStart  DateTime
  place      String
  usersCount Int?
  payersCount Int?
  UserEvent  UserEvent[]
}

model UserEvent {
  id      Int    @id @default(autoincrement())
  userId  BigInt
  eventId Int
  user    User   @relation(fields: [userId], references: [id], onDelete: Cascade)
  event   Event  @relation(fields: [eventId], references: [id], onDelete: Cascade)
}
